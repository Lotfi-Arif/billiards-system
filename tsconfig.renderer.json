{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "outDir": "dist/renderer",
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@renderer/*": ["./src/renderer/*"]
    }
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*",
    "src/globals.d.ts",
    "src/hooks/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/backend/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}