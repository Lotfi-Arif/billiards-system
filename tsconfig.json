{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@backend/*": ["./src/backend/*"],
      "@renderer/*": ["./src/renderer/*"]
    }
  },
  "include": ["src", "vitest.config.ts", "vitest.setup.*.ts", "globals.d.ts"],
  "exclude": ["node_modules", "dist"]
}
